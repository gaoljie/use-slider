{
  "name": "use-slider",
  "version": "1.0.3",
  "description": "A react based use hook for sliders",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Jay Gao",
  "license": "MIT",
  "homepage": "https://gaoljie.github.io/use-slider/",
  "repository": {
    "type": "git",
    "url": "https://github.com/gaoljie/use-slider"
  },
  "keywords": [
    "slider",
    "carousel",
    "react",
    "components",
    "image slider"
  ],
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.tsx,.ts",
    "dev": "docz dev",
    "build": "docz build",
    "serve": "docz build && docz serve",
    "cm": "cz",
    "release": "HUSKY_SKIP_HOOKS=1 release-it --ci",
    "prepublishOnly": "rollup --config"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "@wessberg/rollup-plugin-ts": "^1.3.4",
    "autoprefixer": "^9.8.6",
    "commitizen": "^4.2.1",
    "cz-conventional-changelog": "3.3.0",
    "docz": "^2.3.1",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-react-hooks": "^4.1.2",
    "gatsby-plugin-sass": "^2.3.12",
    "husky": ">=4",
    "lint-staged": ">=10",
    "node-sass": "^4.14.1",
    "prettier": "^2.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "release-it": "^14.0.3",
    "rollup": "^2.26.11",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-postcss": "^3.1.8",
    "typescript": "^4.0.2"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "*.{css,md,mdx,json}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release-it": {
    "npm": {
      "publish": false
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    },
    "git": {
      "tagName": "v${version}",
      "commitMessage": "Release v${version}",
      "changelog": "npx auto-changelog --stdout --commit-limit false -u --template https://raw.githubusercontent.com/release-it/release-it/master/templates/changelog-compact.hbs"
    },
    "hooks": {
      "after:bump": "npx auto-changelog -p"
    }
  },
  "dependencies": {
    "gh-pages": "^3.1.0"
  }
}
